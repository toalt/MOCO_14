<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="garduino.moco.htwg.de.moco_ws14" >


    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GarduinoMainActivity"
            android:label="@string/title_activity_garduino_main"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InsideActivity"
            android:label="@string/title_activity_inside"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ManualModeActivity"
            android:label="@string/title_activity_manual_mode"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <service
            android:name="service.GarduinoService"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
