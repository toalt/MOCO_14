<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/inside"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="garduino.moco.htwg.de.moco_ws14.InsideActivity"
    >

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_green"
        android:text="Temperature: 23.4 Â°C"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:gravity="center"
        android:id="@+id/textViewTemp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_green"
        android:text="Soil Moisture: 68.5 %"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:gravity="center"
        android:id="@+id/textViewSoil"
        android:layout_below="@+id/textViewTemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_green"
        android:text="Humidity: 55.2 %"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:gravity="center"
        android:id="@+id/textViewHumidity"
        android:layout_below="@+id/textViewSoil"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_green"
        android:text="Seedtime: 5d 13h"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:gravity="center"
        android:id="@+id/textViewTime"
        android:layout_below="@+id/textViewHumidity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_green"
        android:text="Water Level: 83.7 %"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:gravity="center"
        android:id="@+id/textWater"
        android:layout_below="@+id/textViewTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_green"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:text="Back"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_green"
        android:textSize="28dp"
        android:textColor="@color/beige"
        android:text="Manual Mode"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
