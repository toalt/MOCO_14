<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="garduino.moco.htwg.de.moco_ws14.ManualModeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:id="@+id/imageView1"
        android:src="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual"
        android:textSize="32dp"
        android:textColor="@color/white"
        android:id="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bulb"
        android:id="@+id/imageViewBulb"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/textView1"
        />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonLight"
        android:textOn="Light On"
        android:textOff="Light Off"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@drawable/rounded"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="90dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cooler"
        android:id="@+id/imageViewCooler"
        android:layout_below="@+id/imageViewBulb"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonAir"
        android:textOn="Airing On"
        android:textOff="Airing Off"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@drawable/rounded"
        android:layout_alignTop="@+id/imageViewCooler"
        android:layout_marginLeft="90dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewWater"
        android:src="@drawable/watering"
        android:layout_below="@+id/imageViewCooler"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
     />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textOn="Water On"
        android:textOff="Water Off"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@drawable/rounded"
        android:id="@+id/toggleButtonWater"
        android:layout_below="@+id/imageViewCooler"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:text="Back"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
