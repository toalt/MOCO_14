<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="garduino.moco.htwg.de.moco_ws14.ManualModeActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:id="@+id/imageView1"
        android:src="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual"
        android:textSize="34dp"
        android:textColor="@color/white"
        android:id="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cooler"
        android:id="@+id/imageViewCooler"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="20dp" />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButtonAir"
        android:textOn="Airing On"
        android:textOff="Airing Off"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@drawable/rounded"
        android:layout_alignTop="@+id/imageViewCooler"
        android:layout_marginLeft="100dp"
        android:checked="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewWater"
        android:src="@drawable/watering"
        android:layout_below="@+id/imageViewCooler"
        android:layout_marginTop="10dp"
     />

    <ToggleButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textOn="Water On"
        android:textOff="Water Off"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:background="@drawable/rounded"
        android:id="@+id/toggleButtonWater"
        android:layout_below="@+id/imageViewCooler"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:textSize="28dp"
        android:textColor="@color/white"
        android:text="Back"
        android:id="@+id/back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/seekBar"
        android:thumb="@drawable/bulb"
        android:progressDrawable="@drawable/progress"
        android:layout_below="@+id/imageViewWater"
        android:layout_marginLeft="40dp"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 %"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:id="@+id/setProgress"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"/>


</RelativeLayout>
